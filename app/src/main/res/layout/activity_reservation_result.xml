<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.reservationresult.ReservationResultActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/movie_reservation_result_information"
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:background="@color/reservation_result_background"
                android:gravity="bottom|center"
                android:paddingBottom="7dp"
                android:text="@string/movie_reservation_result_information"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/movie_reservation_result_title"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_information"
                tools:text="해리 포터와 마법사의 돌" />

        <TextView
                android:id="@+id/movie_reservation_result_date"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_title"
                tools:text="2024.3.1 17:00" />

        <TextView
                android:id="@+id/movie_reservation_result_people_count"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="69dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_date"
                tools:text="일반 2명"
                app:layout_constraintEnd_toStartOf="@+id/movie_reservation_result_division1"
                android:layout_marginEnd="5dp" />

        <TextView
                android:id="@+id/movie_reservation_result_division1"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="|"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="69dp"
                app:layout_constraintTop_toBottomOf="@+id/movie_reservation_result_date"
                app:layout_constraintEnd_toStartOf="@+id/movie_reservation_result_seat"
                android:layout_marginEnd="5dp" />

        <TextView
                android:id="@+id/movie_reservation_result_seat"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                tools:text="B3, D2"
                android:layout_marginTop="69dp"
                app:layout_constraintTop_toBottomOf="@+id/movie_reservation_result_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <TextView
                android:id="@+id/movie_reservation_result_division2"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="|"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="69dp"
                app:layout_constraintTop_toBottomOf="@+id/movie_reservation_result_date"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/movie_reservation_result_seat" />

        <TextView
                android:id="@+id/movie_reservation_result_theater"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginTop="69dp"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_date"
                tools:text="엄청 나게 길어요정말길어요 "
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/movie_reservation_result_division2"
                app:layout_constraintEnd_toEndOf="parent" />

        <TextView
                android:id="@+id/movie_reservation_result_price"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_reservation_result_people_count"
                tools:text="25,000원 (현장결제)" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
