<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.settings.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutPushPermission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="@string/textPushPermissionTitle"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            style="@style/Text_RobotoBoldBLACK"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:id="@+id/textPushPermissionTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:text="@string/textPushPermissionDescription"
            android:layout_width="wrap_content"
            android:layout_marginTop="9dp"
            android:textSize="12sp"
            android:textColor="@color/gray_500"
            android:fontFamily="@font/roboto_medium"
            android:includeFontPadding="false"
            android:layout_marginBottom="16dp"
            android:layout_height="wrap_content"
            android:id="@+id/textPushPermissionDescription"
            app:layout_constraintTop_toBottomOf="@+id/textPushPermissionTitle"
            app:layout_constraintStart_toStartOf="@+id/textPushPermissionTitle"
            app:layout_constraintBottom_toBottomOf="parent" />

        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchPushPermission"
            android:layout_marginEnd="16dp"
            app:thumbTint="@color/switch_thumb_color"
            app:trackTint="@color/switch_track_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
